#presentacion
    background-image url("../img/perfil-2.jpeg")
    margin-top 62px
    padding-top 30px
    padding-bottom 30px
    background-size cover
    position relative
    background-position center center
    height 300px
    &:after
        content ""
        width 100%
        height 100%
        background black
        opacity 0.6
        position absolute
        top 0px
        left 0px
    .cnt-general
        position relative
        z-index 2
        display flex
        align-items center
        height 100%
        justify-content center
        .links
            margin-top 40px
            ul
                display flex
                justify-content space-around
                li
                    margin 0px 10px
                    a
                        border-radius 5px
                        transition 0.3s ease all
                        padding 8px 10px 5px 10px
                        font-size 24px
                        i
                            color white
                    a.bitbucket:hover
                        background #205081
                    a.github:hover
                        background black
                    a.facebook:hover
                        background #365899
                    a.youtube:hover
                        background #cc181e
                    a.linkedin:hover
                        background #00a0dc
        .page
            padding 30px 50px
            position relative
            border 1px solid c-blanco
            border-bottom none
            &:after
                content ""
                left 0px
                bottom 0px
                position absolute
                width 50px
                height 1px
                background white
            &:before
                content ""
                right 0px
                bottom 0px
                position absolute
                width 50px
                height 1px
                background white
            h2
                color c-blanco
                font-family open
                font-size 42px
                text-align center
                margin-bottom 10px
            h3
                color c-blanco
                font-family open
                font-size 28px
                text-align center
                position absolute
                bottom -12px
                left 0px
                right 0px
                margin auto
                letter-spacing 2px
        figure
            margin-right 60px
            width 250px
            img
                border-radius 50%
                width 250px
                height auto
        .descripcion
            font-size 20px
            color white
            line-height 28px
            font-family open
#experiencia
    padding-top 50px
    padding-bottom 50px
    .experiencia_list
        display flex
        text-align left
        margin-top 50px
        justify-content center
        align-items center
        flex-wrap wrap
        flex-direction column

        &__contenido
            font-size 14px
            font-family open
            padding 5px 12px
            width 100%
            box-sizing border-box
        &__item
            margin-bottom 40px
            border-radius 7px
            width 80%
            display flex
            transform scale(1)
            transition 0.3s ease all
            color c-negro
            // box-shadow 1px 1px 1px c-negro
            align-items center

            &:hover
                transform scale(1.05)
            a
                border-radius 6px
                margin-right 20px
                border none
                padding 5px
            h4
                font-size 20px
                font-family monserrat
                display inline-block
                margin-bottom 10px
                color c-plomo
                width 100%
                border-top-left-radius 7px
                border-top-right-radius 7px
                box-sizing border-box
                font-weight 700
                text-align left
            p
                margin-bottom 5px
            span
                margin-right 3px
                font-weight 700
#perfil
    background c-crema
    padding-top 50px
    padding-bottom 30px
    .cnt-general
        text-align center
        .descripcion
            font-family open
            line-height 24px
            text-align justify
            p
                margin-bottom 7px
        .detalle-avatar
            margin-top 50px
            display flex
            justify-content center
            figure
                margin-right 40px
            .detalle
                text-align left

                .descargar-cv
                    margin-top 30px
                    a
                        display inline-block
            .educacion
                text-align left
                margin-top 7px
                margin-left 40px
                font-family lato
                p
                    margin-top 5px
                    margin-bottom 5PX
                    font-family open
                    font-size 14px


@media screen and (max-width: 960px)
    #perfil .cnt-general .detalle-avatar
        flex-direction column
        .detalle .descargar-cv
            text-align center
        figure
            margin 0
            margin-bottom 20px
    #experiencia
        .experiencia_list__item
            width 100%
            flex-direction column
            a
                margin 0
                text-align center
                margin-bottom 20px
        .experiencia_list__contenido
            h4
                text-align center
@media screen and (max-width: 480px)
    h2.title
        font-size 26px
    #presentacion
        height 240px
        .cnt-general .page
            h2
                font-size 26px
            h3
                font-size 18px